{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "oosync",
  "version": "0.1.0",
  "type": "module",
  "description": "Opinionated Offline Sync. Sync tooling for Postgres â†” SQLite (WASM) / Cloudflare offline apps.",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./sync": "./src/sync/index.ts",
    "./sync/*": "./src/sync/*",
    "./shared": "./src/shared/index.ts",
    "./shared/protocol": "./src/shared/protocol/index.ts",
    "./shared/protocol/*": "./src/shared/protocol/*",
    "./runtime": "./src/runtime/index.ts",
    "./runtime/*": "./src/runtime/*",
    "./worker": "./worker/src/index.ts",
    "./worker/*": "./worker/src/*",
    "./codegen-schema": "./src/codegen-schema.ts"
  },
  "files": [
    "src",
    "worker",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "codegen:schema": "tsx src/codegen-schema.ts",
    "codegen:schema:check": "tsx src/codegen-schema.ts --check",
    "test": "vitest run src/sync/sync-core-no-table-hacks.test.ts"
  },
  "dependencies": {
    "drizzle-orm": "^0.45.1",
    "jose": "^6.1.3",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260219.0",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  }
}
